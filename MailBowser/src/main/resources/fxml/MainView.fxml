<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox minHeight="600.0" minWidth="960.0" prefHeight="600.0" prefWidth="960.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="edu.chl.mailbowser.presenters.MainPresenter">
    <children>
        <MenuBar>
            <menus>
                <Menu mnemonicParsing="false" text="File">
                    <items>
                        <MenuItem mnemonicParsing="false" onAction="#openAccountManager" text="Accounts..." />
                  <MenuItem mnemonicParsing="false" onAction="#newEmailMenuItemOnAction" text="New Email" />
                  <MenuItem mnemonicParsing="false" onAction="#addTagMenuItemOnAction" text="Add Tag" />
                  <MenuItem mnemonicParsing="false" onAction="#forwardMenuItemOnAction" text="Forward" />
                  <MenuItem mnemonicParsing="false" onAction="#replyMenuItemOnAction" text="Reply" />
                  <MenuItem mnemonicParsing="false" onAction="#replyAllMenuItemOnAction" text="Reply All" />
                        <MenuItem mnemonicParsing="false" onAction="#closeMenuItemOnAction" text="Close" />
                        <MenuItem mnemonicParsing="false" onAction="#refetchMenuItemOnAction" text="Refetch" />
                    </items>
                </Menu>
                <Menu mnemonicParsing="false" text="Edit">
                    <items>
                        <MenuItem mnemonicParsing="false" text="Delete" />
                    </items>
                </Menu>
                <Menu mnemonicParsing="false" text="Help">
                    <items>
                        <MenuItem mnemonicParsing="false" text="About" />
                    </items>
                </Menu>
            </menus>
        </MenuBar>
        <fx:include charset="utf-8" source="TopbarView.fxml" />
        <HBox VBox.vgrow="ALWAYS">
            <children>
                <fx:include source="sidebar/SidebarView.fxml" />
                <fx:include source="EmailListView.fxml" />
                <fx:include source="EmailDetailView.fxml" />
            </children>
        </HBox>
    </children>
</VBox>
