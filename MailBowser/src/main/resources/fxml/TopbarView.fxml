<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import java.lang.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>

<HBox id="topbar" alignment="CENTER_LEFT" maxHeight="60.0" maxWidth="1.7976931348623157E308" prefHeight="60.0" spacing="10.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="edu.chl.mailbowser.presenters.TopbarPresenter">
    <children>
      <HBox alignment="CENTER_LEFT" maxWidth="420.0" spacing="10.0">
         <children>
                <Button id="newEmailButton" styleClass="fontawesome, circle" maxHeight="40.0" maxWidth="-Infinity" minHeight="40.0" minWidth="-Infinity" mnemonicParsing="false" onAction="#newEmailButtonActionPerformed" prefHeight="40.0" prefWidth="180.0" text="&#xf067;" />
         </children>
         <opaqueInsets>
            <Insets />
         </opaqueInsets>
         <HBox.margin>
            <Insets />
         </HBox.margin>
      </HBox>
          <Button fx:id="refetchButton" styleClass="fontawesome, circle" maxHeight="40.0" maxWidth="1.7976931348623157E308" mnemonicParsing="false" onAction="#refetchButtonOnAction" prefHeight="40.0" text="&#xf019;" />
      <HBox alignment="CENTER_RIGHT" layoutX="14.0" layoutY="10.0" maxWidth="1.7976931348623157E308" spacing="10.0" HBox.hgrow="ALWAYS">
         <children>
                <Button fx:id="forwardButton" styleClass="fontawesome, circle" maxHeight="40.0" maxWidth="1.7976931348623157E308" minHeight="40.0" mnemonicParsing="false" onAction="#forwardButtonOnAction" prefHeight="40.0" text="&#xf061;" />
                <Button fx:id="replyButton" styleClass="fontawesome, circle" maxHeight="40.0" maxWidth="1.7976931348623157E308" minHeight="40.0" mnemonicParsing="false" onAction="#replyButtonOnAction" prefHeight="40.0" text="&#xf112;" />
                <Button fx:id="replyAllButton" styleClass="fontawesome, circle" maxHeight="40.0" maxWidth="1.7976931348623157E308" minHeight="40.0" mnemonicParsing="false" onAction="#replyAllButtonOnAction" prefHeight="40.0" text="&#xf122;" />
                <TextField fx:id="searchField" onAction="#searchFieldOnAction" prefWidth="220.0" promptText="Search..." />
                <!-- <TextField fx:id="addTagTextField" maxHeight="40.0" minHeight="40.0" onAction="#addTagOnAction" prefHeight="40.0" promptText="Add tag..." />-->
         </children>
      </HBox>
    </children>
   <padding>
      <Insets left="10.0" right="10.0" />
   </padding>
</HBox>
