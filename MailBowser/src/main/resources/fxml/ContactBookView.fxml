<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import java.lang.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="edu.chl.mailbowser.presenters.ContactBookPresenter">
   <children>
      <HBox>
         <children>
            <ListView fx:id="contactList" onMouseClicked="#contactListOnMouseClicked" prefHeight="300" HBox.hgrow="ALWAYS" />

            <VBox HBox.hgrow="ALWAYS">
               <children>
                  <GridPane fx:id="gridPane" VBox.vgrow="ALWAYS">
                     <children>
                        <Label alignment="CENTER_RIGHT" prefHeight="17.0" prefWidth="55.0" text="Last name" GridPane.halignment="RIGHT" />
                        <Label alignment="CENTER_RIGHT" prefHeight="17.0" prefWidth="55.0" text="First name" GridPane.halignment="RIGHT" GridPane.rowIndex="1" />
                        <TextField fx:id="lastNameField" prefHeight="25.0" prefWidth="68.0" GridPane.columnIndex="1" />
                        <TextField fx:id="firstNameField" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                     </children>

                  </GridPane>

                  <HBox alignment="CENTER_RIGHT" spacing="10.0" HBox.hgrow="NEVER">
                     <children>
                        <Button fx:id="addNewAddressButton" mnemonicParsing="false" onAction="#addNewAddressButtonOnAction" styleClass="circle, fontawesome" text="" />
                        <Button fx:id="saveButton" mnemonicParsing="false" onAction="#saveButtonOnAction" styleClass="circle, fontawesome" text="" />
                     </children>
                  </HBox>

               </children>
            </VBox>
         </children>
      </HBox>
      <HBox id="topbar" VBox.vgrow="NEVER">
         <children>
            <HBox alignment="CENTER_LEFT" spacing="10.0" HBox.hgrow="ALWAYS">
               <children>
                  <Button fx:id="addContactButton" mnemonicParsing="false" onAction="#addContactButtonOnAction" prefHeight="25.0" prefWidth="115.0" styleClass="circle, fontawesome" text="&#xf234;" />
                  <Button fx:id="deleteButton" mnemonicParsing="false" onAction="#deleteButtonOnAction" styleClass="circle, fontawesome" text="&#xf235;" />
               </children>
            </HBox>
         </children>
      </HBox>
   </children>
</VBox>
