<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.web.*?>
<?import java.lang.*?>
<?import javafx.scene.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<fx:root prefHeight="600.0" prefWidth="960.0" stylesheets="@../css/style.css" type="javafx.scene.layout.GridPane" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1">
    <columnConstraints>
        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
    </columnConstraints>
    <rowConstraints>
        <RowConstraints minHeight="20.0" vgrow="NEVER" />
        <RowConstraints minHeight="20.0" vgrow="NEVER" />
        <RowConstraints minHeight="20.0" vgrow="NEVER" />
        <RowConstraints minHeight="20.0" vgrow="NEVER" />
        <RowConstraints minHeight="20.0" vgrow="ALWAYS" />
    </rowConstraints>
    <children>

        <HBox id="topbar" GridPane.rowIndex="0">
            <children>
                <HBox alignment="CENTER_LEFT" HBox.hgrow="ALWAYS">
                    <Button alignment="CENTER" maxWidth="1.7976931348623157E308" mnemonicParsing="false" onAction="#sendButtonActionPerformed" prefHeight="40.0" prefWidth="250.0" text="&#xf1d8;">
                        <cursor>
                            <Cursor fx:constant="HAND" />
                        </cursor>
                        <styleClass>
                            <String fx:value="fontawesome" />
                            <String fx:value="circle" />
                        </styleClass>
                    </Button>
                </HBox>
                <HBox alignment="CENTER_RIGHT" HBox.hgrow="ALWAYS">
                    <Button alignment="CENTER" maxWidth="1.7976931348623157E308" mnemonicParsing="false" onAction="#openContactBook" prefHeight="40.0" prefWidth="250.0" text="&#xf02d;">
                        <cursor>
                            <Cursor fx:constant="HAND" />
                        </cursor>
                        <styleClass>
                            <String fx:value="fontawesome" />
                            <String fx:value="circle" />
                        </styleClass>
                    </Button>
                </HBox>
            </children>
        </HBox>

        <TextField styleClass="gridded" fx:id="receivers" prefHeight="40.0" GridPane.hgrow="ALWAYS" GridPane.rowIndex="1" promptText="Receivers" />

        <TextField styleClass="gridded" fx:id="cc" prefHeight="40.0" GridPane.hgrow="ALWAYS" GridPane.rowIndex="2" promptText="Copy" />

        <TextField styleClass="gridded" fx:id="subject" prefHeight="40.0" GridPane.hgrow="ALWAYS" GridPane.rowIndex="3" promptText="Subject" />

        <SplitPane dividerPositions="0.5" GridPane.rowIndex="4">
            <items>
                <TextArea fx:id="content" onKeyReleased="#onKeyTyped" wrapText="true" promptText="Message...">
                </TextArea>
                <WebView fx:id="markdown" prefHeight="0.0" prefWidth="0.0" />
            </items>
        </SplitPane>

    </children>
</fx:root>
